#!/bin/bash

if [[ $# -lt 1 ]]
then
    echo "Usage: $0 tcx_file [empedID]"
    echo ""
    exit 1
fi

TCXFILE=$1
#echo $TCXFILE
shift

ROOT=${0%/*}/../
LIB=$ROOT/lib

# Create the classpath
for i in $LIB/*.jar
do
    CP=$CP:$i
done


# Execeute the application with supplied arguments
#/System/Library/Frameworks/JavaVM.framework/Versions/1.6/Home/bin/java -classpath $CP com.tcx2nikeplus.converter.Convert $TCXFILE
java -classpath $CP com.awsmithson.tcx2nikeplus.converter.Convert "$TCXFILE" $*

