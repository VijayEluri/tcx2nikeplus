#!/bin/bash

if [[ $# -lt 1 ]]
then
    echo "Usage: $0 tcx_file [empedID]"
    echo ""
    exit 1
fi

TCXFILE=$1
shift

ROOT=${0%/*}/../
LIB=$ROOT/lib
CONF=$ROOT/conf

# Create the classpath
for i in $LIB/*.jar
do
    CP=$CP:$i
done


# Execute the application with supplied arguments
java -Djava.util.logging.config.file=$CONF/logging_app.properties -classpath $CP com.awsmithson.tcx2nikeplus.converter.Convert "$TCXFILE" $*
