#!/bin/bash

if [[ $# -lt 2 ]]
then
    echo "Usage: $0 pin nike-file"
    echo ""
    exit 1
fi

PIN=$1
NIKEFILE=$2
#echo $PIN
#echo $TCXFILE
shift

ROOT=${0%/*}/../
LIB=$ROOT/lib

# Create the classpath
for i in $LIB/*.jar
do
    CP=$CP:$i
done


# Execeute the application with supplied arguments
java -classpath $CP com.awsmithson.tcx2nikeplus.uploader.Upload $PIN $NIKEFILE
